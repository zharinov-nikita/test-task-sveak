# Используем официальный образ Node.js как базовый образ
FROM node:16

# Устанавливаем директорию приложения в контейнере
WORKDIR /app

# Копируем package.json и yarn.lock для установки зависимостей
COPY package.json yarn.lock ./

# Устанавливаем зависимости с использованием Yarn
RUN yarn install

# Копируем весь исходный код приложения в контейнер
COPY . .

# Собираем ваше приложение
RUN yarn build

# Указываем порт, на котором приложение будет работать
EXPOSE 9000

# Команда для запуска приложения
CMD ["yarn", "preview"]
